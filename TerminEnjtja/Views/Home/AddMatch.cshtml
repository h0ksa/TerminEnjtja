<!-- Views/Home/AddMatch.cshtml -->
@model MatchViewModel
@{
    ViewData["Title"] = "Add Match";
}

<div class="add-match-form">
    <h2><i class="fas fa-plus-circle"></i> Add New Match</h2>
    <form asp-action="AddMatch" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Date">Date (Thursday):</label>
            <div class="input-group">
                <i class="fas fa-calendar"></i>
                <input asp-for="Date" class="form-control" type="date" />
            </div>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="TeamAScore">ACI Score:</label>
                <div class="input-group">
                    <i class="fas fa-futbol"></i>
                    <input asp-for="TeamAScore" class="form-control" type="number" min="0" placeholder="0" />
                </div>
                <span asp-validation-for="TeamAScore" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamBScore">BESI Score:</label>
                <div class="input-group">
                    <i class="fas fa-futbol"></i>
                    <input asp-for="TeamBScore" class="form-control" type="number" min="0" placeholder="0" />
                </div>
                <span asp-validation-for="TeamBScore" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <div class="input-group">
                <i class="fas fa-comment"></i>
                <input asp-for="Notes" class="form-control" placeholder="Optional match notes" />
            </div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save Match
            </button>
            <a asp-action="Dashboard" class="btn btn-danger">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>